{
  "name": "alien-dom",
  "type": "module",
  "version": "0.8.1",
  "description": "Enhanced DOM APIs mixed with jsx-dom",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alloc/alien-dom.git"
  },
  "files": [
    "dist",
    "types",
    "*.d.ts",
    "*.js"
  ],
  "sideEffects": [
    "global.js",
    "dist/hmr.mjs"
  ],
  "keywords": [
    "jsx-dom",
    "dom",
    "jquery",
    "jsx",
    "element"
  ],
  "author": "Alec Larson",
  "license": "MIT",
  "prettier": "@alloc/prettier-config",
  "scripts": {
    "build": "rimraf dist && cd src && tsup-node --treeshake smallest --define.DEV false",
    "dev": "cd src && tsup-node --watch --sourcemap --define.DEV true --clean",
    "test": "NODE_OPTIONS='--loader @alien-dom/node --no-warnings=ExperimentalWarnings' ava --watch --no-worker-threads",
    "debug": "NODE_OPTIONS='--loader @alien-dom/node --no-warnings=ExperimentalWarnings' ava debug"
  },
  "dependencies": {
    "@alloc/types": "^2.3.0",
    "csstype": "^3.1.2",
    "ts-key-enum": "^2.0.12"
  },
  "devDependencies": {
    "@alien-dom/node": "workspace:^",
    "@alloc/fast-rimraf": "^1.0.8",
    "@alloc/is": "^3.1.2",
    "@alloc/prettier-config": "^1.0.0",
    "alien-dom": "link:./src",
    "ava": "^5.2.0",
    "dedent": "^1.5.1",
    "flush-microtasks": "^1.0.1",
    "linear-color": "^1.2.0",
    "linkedom": "^0.15.1",
    "nanospy": "^1.0.0",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "ava": {
    "require": [
      "./spec/setup/globals.ts",
      "./spec/setup/jsx.ts"
    ],
    "files": [
      "src/**/*.test.*",
      "spec/**/*.test.*",
      "packages/**/*.test.*"
    ],
    "extensions": {
      "ts": "module",
      "tsx": "module"
    }
  }
}
