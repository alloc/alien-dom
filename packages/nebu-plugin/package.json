{
  "name": "@alien-dom/nebu",
  "version": "0.3.3",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsup-node src/index.ts --format esm --dts",
    "dev": "tsup-node src/index.ts --format esm --dts --watch --sourcemap"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "kleur": "^4.1.5",
    "nebu": "^2.4.0",
    "tsup": "^6.7.0"
  },
  "peerDependencies": {
    "nebu": ">=2.3"
  },
  "ava": {
    "files": [
      "**/*.test.*"
    ],
    "snapshotDir": "snapshots",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  }
}
